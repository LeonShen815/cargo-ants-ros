<!-- Test at reactive behavior: local planner and local mapping, on a simulated environment -->

<launch>

    <!-- Enable/disable visualization -->
    <arg name="plots" default="False" />
    <arg name="rviz" default="False" />
    
    <!-- Simulated environment + controllers + drive -->
    <include file="$(find at_tests_sim)/launch/at_sim_01_drive.launch"/>
    
    <!-- Run local mapping -->
    <node   pkg="cargo_ants_local_mapping"
            type="local_mapping"
            name="local_mapping"
            args=""
            output="screen">
            
            <!-- TO DO: Do remappings !! -->        
            
    </node>
    
    <!-- Run local planning -->
    <node   pkg="cargo_ants_path_adaptor"
            type="path_adaptor"
            name="path_adaptor"
            args=""
            output="screen">
            
            <!-- TO DO: Do remappings !! -->
                
    </node>
    
    <!-- Run rviz node -->
    <group if="$(arg rviz)">
        <node   
            pkg="rviz" 
            type="rviz"
            name="rviz"         
            args="-d $(find at_tests_sim)/rviz/at_sim_02.rviz">
        </node>
    </group>
    
</launch>
